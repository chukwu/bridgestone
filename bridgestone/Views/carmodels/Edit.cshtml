@model bridgestone.Models.carmodel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Backend.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CAR MODEL</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.mid)
        @Html.HiddenFor(model => model.createdwhen)
        @Html.HiddenFor(model => model.enteredby)
        @Html.HiddenFor(model => model.makeID)

        <div class="form-group">
            @Html.LabelFor(model => model.modelname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.modelname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.modelname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.makeID, "makeID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("makeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.makeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
